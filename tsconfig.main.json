{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist/main",
    "rootDir": "src/main",
    "moduleResolution": "node",
    "types": ["node", "better-sqlite3"]
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules"]
}
